@model Student

@*<form method="post" asp-action="DeletePOST">*@
<form method="post" asp-action="Delete">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Student</h2>
        </div>
        <div asp-validation-summary="All" />
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" disabled />
            <span asp-validation-for="Name" class="text-danger" />
        </div>
        <div class="mb-3">
            <label asp-for="Grade"></label>
            <input asp-for="Grade" class="form-control" disabled />
            <span asp-validation-for="Grade" class="text-danger" />
        </div>
        <button type="submit" class="btn btn-primary">Delete</button>
        <a asp-controller="Student" asp-action="Index" class="btn btn-secondary">
            Back to list
        </a>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
    }